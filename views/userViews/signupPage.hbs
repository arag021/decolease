<h1>Signup</h1>

<form action="/signup" method="post">

  <label for="username">Username:</label>
  <input type="text" name="theUsername">

  <label for="password">Password:</label>
  <input id="password" name="thePassword" type="text">

  <br>
  <br>
  <label for="email">Email:</label>
  <input type="text" name="theEmail">

  <br>
  <br>
  <input type="radio" name="theType" value="true"> Artist
  <input type="radio" name="theType" value="false"> Customer


  <button>Submit</button>

</form>


{{#if errorMessage}}
<div>{{errorMessage}}</div>
{{/if}}